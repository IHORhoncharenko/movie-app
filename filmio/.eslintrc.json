{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": false,
      "trailingComma": "all",
      "bracketSpacing": true,
      "printWidth": 80,
      "tabWidth": 2,
      "useTabs": false,
      "importOrder": ["^@?\\w", "^[./]"],
      "importOrderSeparation": true,
      "importOrderSortSpecifiers": true
    }]
  }
}
